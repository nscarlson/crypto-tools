{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!**/index.js"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text-summary"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "modulePaths": [
    "src"
  ]
}
